#include <stdio.h>
#include <string.h>
#include <locale.h>

 struct dados_livros {
    char nome[200], autor[250], categoria[250];
    float preco;
 };
 
int main () {
    setlocale(LC_ALL, "portuguese");
    int i;

    struct dados_livros livros[3];
   
   printf("\nDeclare as informações do livro desejado \n");

   for (i = 0; i < 3; i++) {
        printf("Digite o nome do livro: ");
        gets(livros[i].nome);

        printf("Digite o autor do livro: ");
        gets(livros[i].autor);

       printf("Digite a categoria do livro: ");
       gets(livros[i].categoria);

       printf("Digite o preço do livro: \n");
       scanf("%f", &livros[i].preco);
       fflush(stdin);
   }
   
   system(cls || clear);
   
   printf("\nExibindo os dados do usúario... \n");

    for (i = 0; i < 3; i++) {
        printf("Nome do livro: %s \n", livros[i].nome);
        printf("Nome do autor do livro: %s \n", livros[i].autor);
        printf("Categoria do livro: %s \n", livros[i].categoria);
        printf("preço do livro desejado: R$%f \n", livros[i].preco);
        printf("\n\n");
    }

    return 0;
 }